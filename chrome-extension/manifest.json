{
    "name": "EmoReply",
    "version": "2.0",
    "description": "You wouldn't understand :'(",
    "manifest_version": 2,
    "background": {
        "scripts": ["background.js"],
        "persistent": false
    },
    "browser_action": {
        "default_popup": "popup.html",
        "default_icon": {
            "128": "images/Sad-Face-128.png"
        }
    },
    "icons": {
        "128": "images/Sad-Face-128.png",
        "48": "images/Sad-Face-48.png",
        "16": "images/Sad-Face-16.png"
    },
    "permissions": [
        "http://localhost:5000/responses"
    ]
}